\begin_inset Formula 
\begin{align}
F_{s}\left(\boldsymbol{r}\right) & \simeq\sum_{i}F_{i}W\left(\boldsymbol{r-}\boldsymbol{r}_{i}^{\prime},h\right)\Delta\boldsymbol{r}_{i}\nonumber \\
F_{s}\left(\boldsymbol{r}\right) & \simeq\sum_{i}F_{i}W\left(\boldsymbol{r-}\boldsymbol{r}_{i}^{\prime},h\right)\dfrac{m_{i}}{\rho_{i}}\label{eq:sph_smooth}
\end{align}

